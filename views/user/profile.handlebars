<section class="h-100 gradient-custom-2">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-lg-9 col-xl-7">
        <div class="card">
          <div class="rounded-top text-white d-flex flex-row" style="background-color: #000; height:200px;">
            <div class="ms-4 mt-5" style="width: 150px;height: 150px !important;z-index: 2" >
              <img src="{{user.profilepic}}" height=""
                alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2"
                style="width: 150px;height: 150px !important; z-index: 1">
                {{#if belong}}
                    <a type="button" class="btn btn-outline-dark" data-mdb-ripple-color="dark" href="/user/editAccount"
                        style="z-index: 1;">
                        Edit profile
                    </a>
                {{/if}}
            </div>
            <div class="ms-3" style="margin-top: 130px;">
              <h5>{{user.name}}</h5>
              <p>Date Joined: {{formatDate user.createdAt 'DD MMM YYYY'}}</p>
            </div>
          </div>
          <div class="p-4 text-black" style="background-color: #f8f9fa;">
            <div class="d-flex justify-content-end text-center py-1">
              <div>
                <p class="mb-1 h5">{{#add l1 l2}}{{/add}}</p>
                <p class="small text-muted mb-0">Listings</p>
              </div>
              {{!-- <div class="px-3">
                <p class="mb-1 h5">1026</p>
                <p class="small text-muted mb-0">Followers</p>
              </div>
              <div>
                <p class="mb-1 h5">478</p>
                <p class="small text-muted mb-0">Following</p>
              </div> --}}
            </div>
          </div>
          <div class="card-body p-4 text-black">
            <div class="mb-5">
              <p class="lead fw-normal mb-1">About</p>
              <div class="p-4" style="background-color: #f8f9fa;">
                <p class="font-italic mb-1">{{user.about}}</p>
              </div>
            </div>
            <div class="d-flex justify-content-between align-items-center mb-4">
              <p class="lead fw-normal mb-0">Recent Listings</p>
              <p class="mb-0"><a href="/myListing" class="text-muted">Show all</a></p>
            </div>
            {{#if listings}}
              {{#equals l1 1}}
                <div class="row g-2">
                {{#each listings}}
                  <div class="col mb-2"><a href="/viewOnelisting/{{sku}}"><img src="/images/items/{{posterURL}}"
                  alt="image 1" class="w-100 rounded-3" height="200px"></a></div>
                  <div class="col mb-2">
                  </div>
                {{/each}}
              {{else}}
              <div class="row g-2">
                {{#each listings}}
                  <div class="col mb-2"><a href="/viewOnelisting/{{sku}}"><img src="/images/items/{{posterURL}}"
                  alt="image 1" class="w-100 rounded-3" height="200px"></a></div>
                {{/each}}
              </div>
              {{/equals}}
            {{else}}
              <h2 style="margin: auto">No listings found</h2>
            {{/if}}
            {{#if listings2}}
              {{#equals l2 1}}
                <div class="row g-2">
                {{#each listings2}}
                  <div class="col mb-2"><a href="/viewOnelisting/{{sku}}"><img src="/images/items/{{posterURL}}"
                  alt="image 1" class="w-100 rounded-3" height="200px"></a></div>
                  <div class="col mb-2">
                  </div>
                {{/each}}
              {{else}}
              <div class="row g-2">
                {{#each listings2}}
                  <div class="col mb-2"><a href="/viewOnelisting/{{sku}}"><img src="/images/items/{{posterURL}}"
                  alt="image 1" class="w-100 rounded-3" height="200px"></a></div>
                {{/each}}
              </div>
              {{/equals}}
            {{/if}}
          
          </div>
        </div>
      </div>
    </div>
  </div>
</section>